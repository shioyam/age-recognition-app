{
  "version": 2,
  "name": "age-recognition-app",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "DEEPL_API_KEY": "@deepl-api-key",
    "NODE_ENV": "production",
    "ALLOWED_ORIGINS": "https://age-recognition-app.vercel.app"
  },
  "functions": {
    "server.js": {
      "maxDuration": 10
    }
  }
}